@model Demo.Models.Medicine

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Medicine</legend>

        <div class="editor-label">
            @Html.HiddenFor(model => model.Med_ID)
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.Med_ID)
            @Html.ValidationMessageFor(model => model.Med_ID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Quantity)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Quantity)
            @Html.ValidationMessageFor(model => model.Quantity)
        </div>
      
        <div class="editor-label">
            @Html.LabelFor(model => model.Price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Expire_Date)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Expire_Date)
            @Html.ValidationMessageFor(model => model.Expire_Date)
        </div>

   <div class="editor-label">
            @Html.LabelFor(model => model.ChemicalForm)
        </div>

        <div class="editor-field">
            @Html.DropDownList("Forms", new SelectList(ViewBag.chemicalForms),new { style = "font-size: 1.4em; font-weight: normal; width :315px"})
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Company_ID)
        </div>
        <div class="editor-field">
            @Html.DropDownList("Names", new SelectList(ViewBag.CompanyNames),new { style = "font-size: 1.4em; font-weight: normal; width :315px"})

        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Medicine")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
